<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.lockView.LockFragment">
    <TextView
        android:id="@+id/name_page"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.05"
        app:layout_constraintWidth_percent="0.8"
        android:textColor="@color/textColor"
        android:textStyle="bold"
        android:textSize="@dimen/_16sdp"
        android:gravity="center"
        android:text="@string/app_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/radio_group"
        android:orientation="horizontal"
        android:clickable="false"
        app:layout_constraintTop_toBottomOf="@id/name_page"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintWidth_percent="0.4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.1"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/one"
            android:buttonTint="@color/radio_button_back"
            android:enabled="false"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_18sdp"/>
        <RadioButton
            android:id="@+id/two"
            android:enabled="false"
            android:layout_weight="1"
            android:buttonTint="@color/radio_button_back"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_18sdp"/>
        <RadioButton
            android:id="@+id/three"
            android:buttonTint="@color/radio_button_back"
            android:enabled="false"
             android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_18sdp"/>
        <RadioButton
            android:id="@+id/four"
            android:buttonTint="@color/radio_button_back"
            android:enabled="false"
             android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_18sdp"/>
        <RadioButton
            android:id="@+id/five"
            android:buttonTint="@color/radio_button_back"
            android:enabled="false"
             android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_18sdp"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_number"
        app:layout_constraintTop_toBottomOf="@id/radio_group"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="3"
        app:layout_constraintVertical_bias="0.35"
        app:layout_constraintWidth_percent="0.75"
        app:layout_constraintHeight_percent="0.6"
        tools:listitem="@layout/item_lock"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>